page {
  background: #FFFFFF;
}
.swiper {
  height: 600rpx;
}
.navigation {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 100rpx;
  border: solid 2rpx #f2f2f2;
  background-color: #ffffff;
  padding: 16rpx 0;
  -webkit-box-pack: space-evenly;
  -webkit-justify-content: space-evenly;
          justify-content: space-evenly;
}
.navigation .left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 20rpx;
}
.navigation .left .item {
  margin: 0 30rpx;
}
.navigation .left .item.car {
  text-align: center;
  position: relative;
}
.navigation .left .item.car .car-num {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}
.navigation .right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 28rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.navigation .right .btn {
  line-height: 66rpx;
  padding: 0 30rpx;
  border-radius: 36rpx;
  color: #ffffff;
}
.navigation .right .cart {
  background-color: #ed3f14;
  margin-right: 30rpx;
}
.navigation .right .buy {
  background-color: #ff7900;
}
.activity-wrap {
  display: inline-block;
  padding: 5rpx 10rpx;
  background: #ffd2d3;
  border-radius: 5rpx;
  margin-left: 20rpx;
}
.list-btn {
  display: inline-block;
  margin-right: 20rpx;
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background-color: #f6f6f6;
  border: 1rpx solid #f6f6f6;
}
.active {
  border: 1rpx solid #f20000;
  background-color: #ffcfcf;
  color: #f20000;
}
.disabled {
  background-color: gray;
}
.new-boxshadow {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  width: 50px;
  height: 50px;
  border-radius: 10px;
  background: -webkit-linear-gradient(305deg, #f0f0f0, #cacaca);
  background: linear-gradient(145deg, #f0f0f0, #cacaca);
  box-shadow: 4px 4px 8px #bebebe, -4px -4px 8px #ffffff;
  -webkit-transition: all 0.1s;
  transition: all 0.1s;
}
.new-boxshadow.click {
  background: -webkit-linear-gradient(305deg, #cacaca, #f0f0f0);
  background: linear-gradient(145deg, #cacaca, #f0f0f0);
}
.dot {
  display: inline-block;
  border-radius: 50%;
  background-color: #2d9cba;
}
.dot.dot-small {
  width: 8rpx;
  height: 8rpx;
}
.dot.dot-big {
  width: 15rpx;
  height: 15rpx;
  margin-left: 2rpx;
  margin-right: 2rpx;
}

