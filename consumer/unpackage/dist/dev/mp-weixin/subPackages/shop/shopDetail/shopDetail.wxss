.shop-info-header {
  width: 400rpx;
}
.wrap {
  position: relative;
  top: -22rpx;
}
.list-header .active {
  color: #1672ff;
  background: url(data:image/png;base64,) no-repeat;
  background-size: contain;
  background-position: bottom;
  font-weight: bold;
}
.fixed-btn {
  position: fixed;
  right: 63rpx;
  z-index: 100;
  margin-top: 30rpx;
}
.line {
  display: inline-block;
  width: 5rpx;
  height: 20rpx;
  background-color: #1672ff;
